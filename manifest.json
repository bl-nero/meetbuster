{
    "name": "Calendar Breakout",
    "version": "1.0",
    "description": "Too many meetings? No problem!",
    "manifest_version": 2,
    "permissions": [
        "declarativeContent"
    ],
    "background": {
        "scripts": [
            "line-segments-intersect.js",
            "circles-bouncing-off-lines.js",
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "*://calendar.google.com/*"
            ],
            "js": [
                "contentScript.js"
            ]
        }
    ],
    "page_action": {}
}