{
    "manifest_version": 2,
    "name": "MeetBuster",
    "version": "1.0",
    "author": "Bartosz Leper (bl.nero@gmail.com)",

    "description": "Too many meetings? No problem! This #1 productivity app will allow you to reclaim your time by busting your Google Calendar entries.",

    "permissions": [
        "declarativeContent",
        "storage"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "*://calendar.google.com/*"
            ],
            "js": [
                "line-segments-intersect.js",
                "geometry.js",
                "physics.js",
                "game.js",
                "contentScript.js"
            ]
        }
    ],
    "page_action": {},
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    }
}